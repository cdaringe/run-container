{
  "name": "run-container",
  "version": "0.0.0-semantic-release",
  "description": "run a docker container in nodejs, as concisely as possible",
  "main": "src/run-container.js",
  "repository": "git@github.com:cdaringe/run-container.git",
  "author": "cdaringe <christopher.dieringer@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@ava/babel": "2.0.0",
    "@types/node": "18.18.3",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "ava": "5.3.1",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "perish": "1.0.3",
    "prettier": "3.0.3",
    "prettier-standard": "16.4.1",
    "semantic-release": "22.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@types/dockerode": "^3.3.19",
    "dockerode": "^3.3.5",
    "execa": "^5.0.0"
  },
  "scripts": {
    "build": "tsc",
    "docs": "rm -rf docs && mkdir -p docs && cp -r src/*.d.ts docs && git add docs -f",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "lint-staged": "lint-staged",
    "precommit": "run-s build lint-staged docs",
    "semantic-release": "semantic-release",
    "test": "ava"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "src/**/*.test.ts"
    ]
  },
  "keywords": [
    "docker",
    "container",
    "run",
    "test",
    "node",
    "dockerode"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run precommit"
    }
  },
  "lint-staged": {
    "{src,test,scripts}/**/*.{js,jsx,ts,tsx}": [
      "pnpm run format",
      "pnpm run lint",
      "git add"
    ]
  }
}
